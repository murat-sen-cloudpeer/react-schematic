{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",
    "lib": ["es2015", "dom"],

    /* Modules */
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",

    /* Emit */
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    // "emitDeclarationOnly": true,
    // "outFile": "./dist/index.d.ts",

    /* type check*/
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
